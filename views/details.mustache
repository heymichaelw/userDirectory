<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="styles.css">
    <title>Details</title>
  </head>
  <body>
  {{#model}}
    <div class="entry">
      <div class="user-header">
        <div class="user-image">
          <img src="{{avatar}}" alt="">
        </div>
        <div class="information">
          <h3>{{name}}</h3>
          <p class="location"><span>{{#address.city}}{{address.city}}, {{/address.city}}{{address.country}}</span> | <span>{{#job}}{{job}}, {{company}}{{/job}}{{^job}}<span class="available">Available for hire</span>{{/job}}</span></p>
          <p class="contact">{{email}} | {{phone}}</p>
        </div>
      </div>
      <div class="user-body">
        <p>{{#university}}<span class="education">Education</span>{{university}}{{/university}}</p>
        <p><span class="skills">Skills</span><ul>
          {{#skills}}
          <li>{{.}}</li>
          {{/skills}}
        </ul></p>
      </div>
    </div>
  {{/model}}
  </body>
</html>
